MDScreen:
    MDLabel:
        text: "Clicked To Rock or Paper or Scissors"
        pos_hint: {"center_y":0.9}
        halign: "center"
        font_size: 25

    MDRoundFlatButton:
        text: "Rock"
        pos_hint: {"center_x": 0.5, "center_y": 0.8}
        size_hint: [0.3,0.06]
        font_size: 20
        on_press:
            app.add_rock()
            app.get_result()

    MDRoundFlatButton:
        text: "Paper"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        size_hint: [0.3,0.06]
        font_size: 20
        on_press:
            app.add_paper()
            app.get_result()

    MDRoundFlatButton:
        text: "Scissors"
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        size_hint: [0.3,0.06]
        font_size: 20
        on_press:
            app.add_scissors()
            app.get_result()

    MDCard:
        id: md_card_result
        orientation: "vertical"
        padding: "10dp"
        size_hint: [0.9, 0.5]
        pos_hint: {"center_x": 0.5, "center_y": 0.3}

        MDLabel:
            id: result
            halign: "center"
            font_size: 30

        MDLabel:
            id: result_score
            halign: "center"
            font_size: 30